version: "3.8"
services:
  sing-box:
    image: ghcr.io/sagernet/sing-box:v1.8.14
    container_name: sing-box
    restart: always
    network_mode: "host"
    cap_add:
      - NET_ADMIN
    devices:
      - /dev/net/tun:/dev/net/tun
    volumes:
      - /etc/sing-box:/etc/sing-box/
    command: -D /var/lib/sing-box -C /etc/sing-box/ run